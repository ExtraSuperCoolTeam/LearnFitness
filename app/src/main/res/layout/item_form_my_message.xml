<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvMessages">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/form_my_message_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lform_my_message_header"
                android:paddingBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyMessage"
                android:layout_below="@id/lform_my_message_header"
                android:paddingBottom="4dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivMyMessageImage"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:layout_below="@id/tvMyMessage"
                android:paddingBottom="4dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>