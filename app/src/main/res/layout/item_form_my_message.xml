<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/textWhite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAboutWeekInfo"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!--<include layout="@layout/form_my_message_header"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/lform_my_message_header"-->
                <!--android:layout_margin="10dp"-->
                <!--android:layout_centerHorizontal="true"/>-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivMyMessageImage"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:layout_below="@id/tvAboutWeekInfo"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyMessage"
                android:layout_below="@id/ivMyMessageImage"
                android:layout_margin="10dp" />



        </RelativeLayout>
</LinearLayout>