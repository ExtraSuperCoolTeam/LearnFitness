<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/testActionbar">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/cvWeekSteps"
        card_view:cardBackgroundColor="@color/primary_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWeekStepsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/textWhite"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/ivWeekStepsImage"
                android:layout_width="240dp"
                android:layout_height="270dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvWeekStepsTitle"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvWeekStepsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp"
                android:textColor="@color/subTextWhite"
                android:layout_below="@id/ivWeekStepsImage"
                android:text="ASDF asldkfjalskdfj lkasdjflk jwejklsdakj lkjlwkejlkjslkdf kljwlekj"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>