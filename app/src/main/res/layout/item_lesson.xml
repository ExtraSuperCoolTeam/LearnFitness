<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/primary_dark" android:id="@+id/rlLesson">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ivThumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeek"
        android:layout_toRightOf="@id/ivThumbnail"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:textColor="@color/textWhite"
        android:text="Week 1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLessonTitle"
        android:layout_below="@+id/tvWeek"
        android:layout_alignLeft="@id/tvWeek"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/textWhite"
        android:text="Jumping Jacks"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ivThumbnail"
        android:background="#fff"/>
</RelativeLayout>