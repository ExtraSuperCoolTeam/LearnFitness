<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Week {{content.index}}</h3>
  </div>
  <div class="panel-body">
    <div class='form-group'>
      <label for='week1Title' class='col-lg-2'>Title:</label>
      <div class='col-lg-10'>
        {{input type='text' class='form-control' placeholder="Abs and Core" value=content.title}}
      </div>
    </div>
    <div class="form-group">
      <label for="week1Video" class='col-lg-2'>YouTube Video ID:</label>
      <div class='col-lg-10'>
        <div class='row'>
          <div class='col-lg-12'>
            {{input type="text" placeholder='Place your YouTube video id here' value=content.videoId}}
          </div>
        </div>
        <div class='row'>
          <div class='col-lg-12'>
            <iframe width="560" height="315" src={{content.videoUrl}} frameborder="0" allowfullscreen>
            </iframe>
          </div>
        </div>
      </div>
    </div>
    <div class='form-group'>
      <label for='exampleInputFile' class='col-lg-2'>Lesson Content</label>
      <div class='col-lg-10'>
        {{#each content.items as |item|}}
          <div class='row'>
            {{#if item.isText}}
              <label class='col-lg-2'>Text content:</label>
              <div class='col-lg-10 text-content-area'>
                {{input type='textarea' value=item.text}}
              </div>
            {{/if}}

            {{#if item.isImage}}
              <label class='col-lg-2'>Image content:</label>

              <div class='col-lg-10 image-content-area'>
                {{input type='text' value=item.url placeholder='https://imgur.com/asdf'}}

                <img class='img-preview' src={{item.url}} />
              </div>
            {{/if}}
          </div>
        {{else}}
          Add photos and text content to explain the video.
        {{/each}}
      </div>
    </div>
    <div class='form-group'>
      <div class='col-lg-10 col-lg-offset-2'>
        <button type='button' {{action 'addImageContent'}}>Add an Image</button>
        <button type='button' {{action 'addTextContent'}}>Add Text Content</button>
      </div>
    </div>
  </div>
</div>
