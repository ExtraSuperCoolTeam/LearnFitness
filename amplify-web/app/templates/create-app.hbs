{{nav-bar top=0 showLogo=true}}
<section id='create-app' class='bg-light-gray'>
  <div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Create An Application</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3 class="section-heading">Main Application Details</h3>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <form class='form-horizontal'>
          <div class="form-group">
            <label for="appName" class='col-lg-2'>Application Name</label>
            <div class='col-lg-10'>
              <input type="text" class="form-control" id="appName" placeholder="My Cool App">
            </div>
          </div>
          <div class="form-group">
            <label for="email" class='col-lg-2'>Contact Email</label>
            <div class='col-lg-10'>
              <input type="email" class="form-control" id="email" placeholder="contact@email.com">
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class='col-lg-2'>Password</label>
            <div class='col-lg-10'>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
          </div>
        </form>
      </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3 class="section-heading">Lesson Content</h3>
        </div>
    </div>
    <div class='row'>
      <div class='col-lg-12'>
        <form class='form-horizontal'>
          {{#each allWeeks as |week|}}
            {{week-content content=week}}
          {{else}}
            <div class="alert alert-info text-center">No content added yet.</div>
          {{/each}}
          <div class="form-group">
            <div class='col-lg-12 text-center'>
              <button class="btn btn-default" {{action 'addWeek'}}><span class='glyphicon
  glyphicon-plus'></span>
              Add a Week
              </button>
            </div>
          </div>
          <div class="form-group">
            <div class='col-lg-12 submit-btn-div text-center'>
              <button type="submit" class="submit-btn btn btn-danger">Create My App</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
{{app-footer}}
